<%- include('partials/header') %>

<section
  class="contact-us py-5 mt-5"
  style="background: #f9f9f9; margin-top: 100px"
>
  <div class="container">
    <h2 class="text-center mb-4 animate__animated animate__fadeInDown">
      Get in Touch
    </h2>
    <div class="row">
      <div class="col-md-6" style="font-size: 23px">
        <h4 class="animate__animated animate__fadeInLeft">
          Contact Information
        </h4>
        <p class="animate__animated animate__fadeInLeft">
          If you have any questions, feel free to reach out to us. We're here to
          help you with all your painting needs.
        </p>
        <ul class="list-unstyled animate__animated animate__fadeInLeft">
          <li><i class="fas fa-phone"></i> +1 234 567 890</li>
          <li><i class="fas fa-envelope"></i> info@jinycolors.com</li>
          <li>
            <i class="fas fa-map-marker-alt"></i> 123 Paint St., Paintsville, PA
          </li>
        </ul>
      </div>
      <div class="col-md-6">
        <h4 class="animate__animated animate__fadeInRight">
          Send Us a Message
        </h4>
        <form
          action="/send-message"
          method="POST"
          class="animate__animated animate__fadeInRight"
        >
          <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input
              type="text"
              class="form-control"
              id="name"
              name="name"
              required
            />
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input
              type="email"
              class="form-control"
              id="email"
              name="email"
              required
            />
          </div>
          <div class="mb-3">
            <label for="message" class="form-label">Message</label>
            <textarea
              class="form-control"
              id="message"
              name="message"
              rows="4"
              required
            ></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Send Message</button>
        </form>
      </div>
    </div>
  </div>
</section>

<section id="map" class="py-5">
  <div class="container">
    <div
      class="embed-responsive embed-responsive-16by9 animate__animated animate__zoomIn"
    >
      <iframe
        class="embed-responsive-item"
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3151.8354345098497!2d144.95565121531874!3d-37.817209979751594!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6ad65d43f1a3df17%3A0x5045675218ce820!2sRialto%20Towers!5e0!3m2!1sen!2sau!4v1631102734876!5m2!1sen!2sau"
        allowfullscreen=""
        loading="lazy"
      ></iframe>
    </div>
  </div>
</section>

